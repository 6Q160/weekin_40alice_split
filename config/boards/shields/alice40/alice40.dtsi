#include <dt-bindings/zmk/matrix_transform.h>

/ {
    chosen {
        zephyr,display = &oled;
        zmk,kscan = &kscan0;
        zmk,matrix_transform = &default_transform;
    };

    default_transform: keymap_transform_0 {
		compatible = "zmk,matrix-transform";
		// 行列数
		columns = <14>;
		rows = <4>;
		// 矩阵定义，从0开始， 空着的不写
		map = <
RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4) RC(0,5)      RC(0,7) RC(0,8) RC(0,9) RC(0,10) RC(0,11)          RC(0,13)
RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4) RC(1,5)      RC(1,7) RC(1,8) RC(1,9) RC(1,10) RC(1,11)          RC(1,13)
RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4) RC(2,5)      RC(2,7) RC(2,8) RC(2,9) RC(2,10) RC(2,11) RC(2,12) RC(2,13)
RC(3,0) RC(3,1)			    RC(3,3)         RC(3,5)      RC(3,7) RC(3,8)                  RC(3,11) RC(3,12) RC(3,13)
		>;
	};

    kscan0: kscan {
		compatible = "zmk,kscan-gpio-matrix";
		label = "KSCAN";

		// 二极管方向
		diode-direction = "row2col";
		// 行引脚定义，规则在左手文件里（alice40_left.overlay）
		row-gpios
			= <&gpio0 15 GPIO_ACTIVE_HIGH>
			, <&gpio0 17 GPIO_ACTIVE_HIGH>
			, <&gpio0 20 GPIO_ACTIVE_HIGH>
			, <&gpio0 13 GPIO_ACTIVE_HIGH>
			;
	};
};